<% if flash[:notice] %>
      <div class="flash">
        <%= flash[:notice] %>
      </div>
      <% end %>
<div class="container">
 <div class="col-xs-12">
	<h2>Editing Book</h2>
	<%= form_for(@book) do |f| %>

	<h4>Title</h4>
	<%= f.text_field :title, class:"col-xs-12" %>

	<h4>Opinion</h4>
	<%= f.text_area :body, class:"col-xs-12" %>

	<p><%= f.submit "Update Book", class:"col-xs-12 btn btn-primary" %></p>
    <% end %>
</div>

    <%= link_to 'Show', book_path %> | <%= link_to 'Back', books_path %>
</div>