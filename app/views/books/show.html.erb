<div class="body">
  <div class="container">
    <% if flash[:notice] %>
      <div class="flash">
        <%= flash[:notice] %>
      </div>
      <% end %>
  　<div class="row">
  　　<div class="col-xs-3">
    　<h2>User info</h2>
  <%= attachment_image_tag @user, :profile_image, size: "100x100", format: 'jpeg', fallback: "no_image.jpg" %>
    <table class="table">
      <tbody><tr></tr> 
      <tr>
        <th>name</th>
        <th><%= @user.name %></th>
      </tr>
      <tr>
        <th>introduction</th>
        <th><%= @user.introduction %></th>
      </tr>
</tbody></table>

<div class="row">
  <%= link_to "", edit_user_path, class: "col-xs-12 btn btn-default glyphicon glyphicon-wrench" %>
  
</div>

    <h2>New book</h2>
    <%= form_for(@newbook) do |f| %>

     <h4>Title</h4>
     <%= f.text_field :title %>

     <h4>Body</h4>
    <%= f.text_area :body %>

    <p><%= f.submit "Create Book", class:"col-xs-12 btn btn-primary " %></p>
    <% end %>

  </div>

  <div class="col-xs-9">
    <h2>Book detail</h2>

    <table class="table table-hover table-inverse">
  <thead>
    <tr> 
      <th colspan="2"></th>
      <th></th>
      <th></th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
      <tr>
        <td>
          <%= link_to user_path(@user.id) do %>
          <%= attachment_image_tag @user, :profile_image, size: "50x50", format: 'jpeg', fallback: "no_image.jpg" %><br>
          <%= @user.name %>
           <% end %> 
          </td>
        <td><%= link_to "#{@book.title}", book_path(@book.id) %></td>
        <td><%= @book.body %></td>
        <% if @user == current_user %>
        <td><%= link_to "Edit", edit_book_path(@book.id), class:"btn btn-success" %></td>
        <td><%= link_to "Destroy", book_path(@book.id), class:"btn btn-danger", method: :delete, "data-confirm" => "本当に削除しますか？" %></td>
        <% end %>
      </tr>
  </tbody>
　　</table>
  </div>
</div>
</div>
</div>  

</body>