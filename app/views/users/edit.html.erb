<% if flash[:notice] %>
      <div class="flash">
        <%= flash[:notice] %>
      </div>
      <% end %>
<div class="container">
	<h2>User info</h2>
	<%= form_for(@user) do |f| %>

	<h4>Name</h4>
	<%= f.text_field :name %>

	<h4>Image</h4>
	<%= f.attachment_field :profile_image %>

	<h4>Introduction</h4>
	<%= f.text_area :introduction %>

	<p><%= f.submit "Update User" %></p>
    <% end %>
</div>